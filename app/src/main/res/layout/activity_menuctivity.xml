<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_rssi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_style"
        android:hint="设置托盘标签RSSI值"
        android:inputType="number"
        android:gravity="center"
        android:textColor="#020202"
        android:textColorHint="#ec0c0c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_instorage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="@string/btn_instotage"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_outstorage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:text="@string/btn_outstorage"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_movestorage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:text="@string/btn_movestorage"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_checkstorage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:text="@string/checkstorage"
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>
